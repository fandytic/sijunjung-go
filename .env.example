# MongoDB connection URI, including credentials and host information.
MONGO_URI=mongodb://localhost:27017

# MongoDB database name for the application.
MONGO_DB=sijunjunggo

# Secret key used to sign JWT bearer tokens; change this in production.
AUTH_SECRET=changeme

# Port for the HTTP server to listen on.
HTTP_PORT=8080

# Token expiry durations (Go duration format: "24h", "30m", "168h", etc.)
ACCESS_TOKEN_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=168h

# SMTP configuration for sending emails
MAILJET_API_KEY=your-mailjet-api-key
MAILJET_SECRET_KEY=your-mailjet-secret-key
MAILJET_FROM_NAME=Sijunjung Go
MAILJET_FROM_EMAIL=noreply@sijunjung.go

# Google OAuth configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:8080/api/auth/google/callback

# Facebook OAuth configuration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# WhatsApp OTP via Fonnte (https://fonnte.com)
FONNTE_TOKEN="your-fonnte-token"

# Log cleanup settings
LOG_RETENTION_DAYS=30
LOG_CLEANUP_INTERVAL=24h

# Super Admin seed account (created on startup if not exists)
SUPER_ADMIN_EMAIL=superadmin@sijunjung.go
SUPER_ADMIN_PASSWORD=changeme