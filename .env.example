# MongoDB connection URI, including credentials and host information.
MONGO_URI=mongodb://localhost:27017

# MongoDB database name for the application.
MONGO_DB=sijunjunggo

# Secret key used to sign JWT bearer tokens; change this in production.
AUTH_SECRET=changeme

# Port for the HTTP server to listen on.
HTTP_PORT=8080

# SMTP configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@sijunjung.go

# Google OAuth configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Facebook OAuth configuration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
