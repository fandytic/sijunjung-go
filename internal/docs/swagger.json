            }
        },
        "http.UserData": {
            "description": "User data",
            "type": "object",
            "properties": {
                "user_id": {
                    "type": "string",
                    "example": "507f1f77bcf86cd799439011"
                }
            }
        },
        "model.FacebookAuthRequest": {
            "description": "Request body for Facebook authentication",
            "type": "object",
            "properties": {
                "access_token": {
                    "type": "string",
                    "example": "EAABsbCS1..."
                }
            }
        },
        "model.GoogleMobileAuthRequest": {
            "description": "Request body for Google authentication from mobile apps (Flutter)",
            "type": "object",
            "properties": {
                "id_token": {
                    "type": "string",
                    "example": "eyJhbGciOiJSUzI1NiIsImtpZCI6IjEyMzQ..."
                }
            }
        },
        "model.LoginRequest": {
            "description": "Request body for user login",
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "sijunjunggo@gmail.com"
                },
                "password": {
                    "type": "string",
                    "example": "password123"
                }
            }
        },
        "model.LogoutRequest": {
            "description": "Request body for logout (optional refresh token to revoke)",
            "type": "object",
            "properties": {
                "refresh_token": {
                    "type": "string",
                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                }
            }
        },
        "model.RefreshTokenRequest": {
            "description": "Request body for refreshing access token",
            "type": "object",
            "properties": {
                "refresh_token": {
                    "type": "string",
                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                }
            }
        },
        "model.RegisterRequest": {
            "description": "Request body for user registration",
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "sijunjunggo@gmail.com"
                },
                "full_name": {
                    "type": "string",
                    "example": "Sijunjung Go"
                },
                "password": {
                    "type": "string",
                    "example": "password123"
                }
            }
        },
        "model.ResendOTPRequest": {
